general {
  output_format = "i3bar"
  color_good     = "#FFFFFF"
  color_degraded = "#FF8000"
  color_bad      = "#FF0000"
  colors         = true
  interval       = 5
}

order += "wireless wlp1s0"
order += "ethernet enp0s31f6"
order += "ethernet enp8s0"
order += "battery 0"
#order += "cpu_temperature 0"
#order += "volume master"
order += "tztime Panama"
order += "tztime Ottawa"
order += "time"

wireless wlp1s0 {
  format_up   = "W: %ip (%quality at %essid, %bitrate)"
  format_down = "W"
}

ethernet enp0s31f6 {
  # if you use %speed, i3status requires root privileges
  format_up   = "E: %ip (%speed)"
  format_down = " "
}

ethernet enp8s0 {
  # if you use %speed, i3status requires root privileges
  format_up   = "E: %ip (%speed)"
  format_down = " "
}

