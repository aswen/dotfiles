general {
  output_format = "i3bar"
  color_good     = "#5882FA"
  color_degraded = "#FF8000"
  color_bad      = "#FF0000"
  colors         = true
  interval       = 5
}

#order += "run_watch EN"
#order += "run_watch ZW"
#order += "run_watch Santpoort"
#order += "run_watch Menno"
#order += "run_watch Whiskey"
order += "wireless wlo1"
order += "ethernet eth0"
order += "battery 0"
#order += "load"
order += "cpu_temperature 0"
order += "volume master"
order += "time"

wireless wlo1 {
  format_up   = "wlo1: (%quality at %essid, %bitrate) %ip"
  format_down = "wlo1: down"
}

ethernet eth0 {
  # if you use %speed, i3status requires root privileges
  format_up   = "eth0: %ip (%speed)"
  format_down = "eth0: down"
}

run_watch Menno {
  pidfile = "/var/run/openvpn.menno.pid"
}
run_watch EN {
  pidfile = "/var/run/openvpn.nedap-enschede.pid"
}
run_watch ZW {
  pidfile = "/var/run/openvpn.nedap-zwolle.pid"
}
run_watch Santpoort {
  pidfile = "/var/run/openvpn.santpoort.pid"
}
run_watch Whiskey {
  pidfile = "/var/run/openvpn.whiskey.pid"
}

battery 0 {
  format        = "%status %percentage %remaining"
  #format       = "%status %percentage %remaining %emptytime %consumption"
  #low_treshold = 10
  last_full_capacity = true
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

time {
  format = " :: %Y-%m-%d :: %H.%M.%S :: "
}

load {
  format = "%1min"
}

disk "/" {
  format = "%free"
}

volume master {
  format    = "♪: %volume"
  device    = "default"
  mixer     = "Master"
  mixer_idx = 0
}

cpu_temperature 0 {
  format        = "%degrees °C"
  path          = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
  max_threshold = 100
}
