general {
  output_format = "i3bar"
  color_good     = "#5882FA"
  color_degraded = "#FF8000"
  color_bad      = "#FF0000"
  colors         = true
  interval       = 5
}

order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime Vancouver"
order += "tztime Ottawa"
order += "time"

wireless wlan0 {
  format_up   = "wlan0: (%quality at %essid, %bitrate) %ip"
  format_down = "wlan0: down"
}

ethernet eth0 {
  # if you use %speed, i3status requires root privileges
  format_up   = "eth0: %ip (%speed)"
  format_down = "eth0: down"
}

battery 0 {
  format                   = "%status %percentage %remaining"
  integer_battery_capacity = true
  last_full_capacity       = true
  status_bat               = "ðŸ”‹ BAT"
  status_chr               = "âš¡ CHR"
  status_full              = "â˜» FULL"
  #status_unk               = "??? UNK"
  #low_treshold             = 35
  path                     = /sys/class/power_supply/BAT%d/uevent
}

run_watch DHCP {
  pidfile = "/var/run/dhclient*.pid"
}

time {
  format = "NL: %Y-%m-%d :: %H:%M:%S"
}

tztime Ottawa {
  format = "Ottawa: %H:%M"
  timezone = "Canada/Eastern"
}

tztime Vancouver {
  format = "Vancouver: %H:%M"
  timezone = "Canada/Pacific"
}

disk "/" {
  format = "%free"
}

volume master {
  format    = "â™ª: %volume"
  device    = "default"
  mixer     = "Master"
  mixer_idx = 0
}

cpu_temperature 0 {
  format        = "%degrees Â°C"
  path          = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
  max_threshold = 100
}
