# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
set $orange #d64937
set $bgnorm #313131
set $blue   #5882FA
set $bfoc   #7f7f7f
set $bgunf  #3f3f3f
set $bunf   #333333
set $white  #FFFFFF

# class                 border  backgr. text    indicator
client.focused          $bfoc   $orange $blue $bfoc
client.focused_inactive $orange $bgunf  $blue #484e50
client.unfocused        $bunf   $bgunf  $blue #292d2e
client.urgent           $bfoc   $orange $blue #900000

bar {
  status_command i3status -c ~/.i3/status
  position bottom
  mode     dock
  modifier $mod

  #workspace_buttons yes

  font pango:Dina 7

  colors {
    background #202020
    statusline #5882FA
    separator  #5882FA

    # class            border   backgrd  text
    focused_workspace  $bfoc    $orange  $white
    active_workspace   $orange  $bgunf   $white
    inactive_workspace $bunf    $bgunf   $blue
    urgent_workspace   $bfoc    #ff1203  $blue
  }
}
